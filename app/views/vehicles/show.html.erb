

<div class="picture-show">
  <div class="picture">
      <%= image_tag @vehicle.photo, class: "card-img-show" %>
      <div class="bottom-center d-flex justify-content-around">
        <div class="flex-item">
          <%= @vehicle.price_per_day %> $
          <span class="price-lighter"> <p>per day </p></span>
        </div>
        <div class="flex-item">
          <%= @vehicle.vehicle_type %>
          <span class="price-lighter"> <p>Type </p></span>
        </div>
      </div>
  </div>

  <div class="content_show">
    <h1 class="h1-item"><%= @vehicle.name%></h1>
    <div class="d-flex justify-content-start">
      <div class="flex-item">
        <%= image_tag @vehicle.owner.avatar, class: "show-avatar" %>
      </div>
      <div class="flex-item">
        <h2 class= "h2-item"><%= @vehicle.owner.first_name %>'s vehicle</h2>
      </div>
    </div>
    <h3 class= "h3-item"> 📍 <%= @vehicle.address %> </h3>
    <h3 class= "h3-item"> 💺 <%= @vehicle.total_seats %></h3>
    <br>
    <p><%= @vehicle.summary %></p>
    <br>
    <div class="form-renting">
      <%= simple_form_for [@vehicle, @renting] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.input :total_price %>  <%# remplacer input par hidden_field  pour le rendre invisible%>
        <%= f.button :submit, "Rent the" + " "+@vehicle.name , class: "btn-submit btn-flat" %>
      <% end %>
    </div>
  </div>
</div>
