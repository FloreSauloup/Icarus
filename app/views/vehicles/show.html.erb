

<div class="picture-show">
  <div class="picture">
    <div class='flo'>
      <div class='flo-img'><%= image_tag @vehicle.photo, class: "card-img-show" %></div>
      <div class="bottom-center d-flex justify-content-around flo-text">
        <div class="flex-item">
          <%=@vehicle.price_per_day%> $
          <span class="price-lighter"> <p>per day </p></span>
        </div>
        <div class="flex-item">
          <%= @vehicle.vehicle_type %>
          <span class="price-lighter"> <p>Type </p></span>
        </div>
      </div>
    </div>
  </div>

  <div class="content_show">
    <h1 class="h1-item"><%= @vehicle.name%></h1>
    <div class="d-flex justify-content-start">
      <div class="flex-item">
        <%= image_tag @vehicle.owner.avatar, class: "show-avatar" %>
      </div>
      <div class="flex-item">
        <h2 class= "h2-item"><%= @vehicle.owner.first_name %>'s vehicle</h2>
      </div>
    </div>
    <h3 class= "h3-item"> üìç <%= @vehicle.address %> </h3>
    <h3 class= "h3-item"> üí∫ <%= @vehicle.total_seats %></h3>
    <br>
    <p><%= @vehicle.summary %></p>
    <br>
    <div class="form-renting">
      <%= simple_form_for [@vehicle, @renting] do |f| %>
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.hidden_field :total_price %>   <%# remplacer input par hidden_field  pour le rendre invisible%>
        <p data-price-per-day="<%= @vehicle.price_per_day %>" id="total-price">Total : </p>
        <%= f.button :submit, "Rent the" + " "+@vehicle.name , class: "btn-submit btn-flat" %>
      <% end %>
    </div>
  </div>
</div>
