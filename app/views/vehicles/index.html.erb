

<div class="container-index">



  <div class="card-vehicles">
    <div>
    <h1>Outdoor escapades</h1>
    </div>
    <% @vehicles.each do |vehicle| %>
        <div class="card-category">

      <%= link_to vehicle_path(vehicle) do %>
          <%= image_tag vehicle.photo, class: "card-img"%>
      <% end %>
          <div class="bottom-center d-flex justify-content-around" style="top: 75%;">
        <div class="flex-item">
          <%= vehicle.price_per_day %> $
          <span class="price-lighter"> <p>per day </p></span>
        </div>
        <div class="flex-item">
          <%= vehicle.vehicle_type %>
          <span class="price-lighter"> <p>Type </p></span>
        </div>

          </div>
        </div>
    <% end %>
  </div>

  <div id="map" class="map-index"
    style="width: 100%; height: 100vh; position: sticky;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
