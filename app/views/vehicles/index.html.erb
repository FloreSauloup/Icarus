

<div class="container-index">



  <div class="card-vehicles">
    <div>
    <h1>Outdoor escapades</h1>
    </div>
    <% @vehicles.each do |vehicle| %>
        <div class="card-category">
      <%= link_to vehicle_path(vehicle) do %>
          <%= image_tag vehicle.photo, class: "card-img"%>
      <% end %>
          <div class="bottom-center d-flex justify-content-around">
            <div class="flex-item">
              <span class="label-vehicle-type"><%= vehicle.vehicle_type.upcase %></span>
            </div>
            <div class="flex-item">
              $<%= vehicle.price_per_day/1000 %> k
            </div>
          </div>
        </div>
    <% end %>
  </div>

  <div id="map" class="map-index"
    style="width: 100%; height: 100vh; position: sticky;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
