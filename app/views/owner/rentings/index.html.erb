<div class="header-index">
  <h1>Here are all your renting requests</h1>
</div>

<div>
  <h2>Renting requests:</h2>
</div>



<div class= "container">
  <div class="header d-flex justify-content-between">
    <div class="title-carte flex-item">
      <span class="text-title">Article</span>
    </div>
    <div class="title-infos flex-item">
      <span class="text-qte">Informations</span>
    </div>
    <div class="prix flex-item">
      <span class="prix-text">Prix</span>
    </div>
    <div class="Action-bouton flex-item">
      <span class="prix-text">Bouton</span>
    </div>
  </div>
</div>
<% @rentings.each do |renting| %>

  <div class="all-box">
    <div class="image-bloc bg-warning">
        <span class="img-card"><%= image_tag renting.vehicle.photo %></span>
    </div>

    <div class="text-bloc">
      <div class="text-guest-box bg-success">
        <h4 class=h4-box>Guest <%= renting.user.first_name%> <%= renting.user.last_name%></h4>
        <p class="p-box"><%= renting.user.email%></p>
        <p class="p-box"><%= renting.user.phone_number%></p>
        <p class="p-box"><%= renting.user.description%>duct description with <strong>relevant info</strong> only.</p>
      </div>

      <div class="text-price-box bg-secondary">
        <h4 class=h4-box> 💰<%= renting.vehicle.price_per_day %>/ day
        <h4 class=h4-box> $<%= renting.total_price %>
      </div>

      <div class="text-button-box bg-primary">
        <div class="button">
          <%= link_to "✅", accept_owner_renting_path(renting), method: :patch %>
          <%= link_to "❌", decline_owner_renting_path(renting), method: :patch %>
        </div>
      </div>

    </div>
  </div>

<%end%>
